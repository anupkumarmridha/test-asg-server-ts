# Application Settings
NODE_ENV=production
APP_NAME=test-asg-server-ts
APP_VERSION=1.0.0
PORT=3000

# Mode Configuration
USE_LOCAL_DOCKER=false
USE_AWS_SECRETS=true
DB_PROVIDER=aws-rds

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
ENABLE_CONSOLE_LOGGING=true

# API Configuration
API_PREFIX=/api
ENABLE_CORS=false
CORS_ORIGIN=https://your-production-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check
HEALTH_CHECK_ENDPOINT=/health

# Database Configuration - AWS RDS
DB_TYPE=mysql
# These values will be overridden by AWS Secrets Manager
DB_HOST=placeholder
DB_PORT=3306
DB_NAME=placeholder
DB_USER=placeholder
DB_PASSWORD=placeholder
DB_SSL=true

# AWS RDS specific settings
AWS_RDS_REGION=us-east-1
AWS_RDS_SSL_MODE=require
AWS_SECRET_NAME=anup-training-dev-db-credentials

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_USER_MANAGEMENT=true
ENABLE_ADVANCED_LOGGING=true
