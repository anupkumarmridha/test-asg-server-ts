# Application Settings
NODE_ENV=development
APP_NAME=test-asg-server-ts
APP_VERSION=1.0.0
PORT=3000

# Mode Configuration
USE_LOCAL_DOCKER=true
USE_AWS_SECRETS=false
DB_PROVIDER=docker

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
ENABLE_CONSOLE_LOGGING=true

# API Configuration
API_PREFIX=/api
ENABLE_CORS=true
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check
HEALTH_CHECK_ENDPOINT=/health

# Database Configuration - Local Docker
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=test_asg_db
DB_USER=mysql_user
DB_PASSWORD=mysql_password
DB_SSL=false

# Docker specific settings
DB_DOCKER_CONTAINER=test-asg-mysql
DB_DOCKER_IMAGE=mysql:8.0
DB_DOCKER_AUTO_START=true

# AWS RDS specific settings (for production)
# AWS_RDS_ENDPOINT=your-rds-endpoint.region.rds.amazonaws.com
# AWS_RDS_REGION=us-east-1
# AWS_RDS_SSL_MODE=require
# AWS_SECRET_NAME=your-secret-name

# Redis Configuration (for future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration (for future use)
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h

# External Services
EXTERNAL_API_URL=
EXTERNAL_API_KEY=

# Monitoring & Observability
ENABLE_METRICS=false
METRICS_PORT=9090

# Feature Flags
ENABLE_USER_MANAGEMENT=true
ENABLE_ADVANCED_LOGGING=false
